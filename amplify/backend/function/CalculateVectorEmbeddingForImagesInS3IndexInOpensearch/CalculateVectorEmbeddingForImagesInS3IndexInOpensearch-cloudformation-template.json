                    "Fn::Sub": "${cloudwatchNamespace}"
                  }
                }
              },
              "Effect": "Allow"
            },
            {
              "Action": [
                "aoss:APIAccessAll"
              ],
              "Resource": [
                {
                  "Ref": "vectordbopensearchopensearchServerlessCollectionARN"
                }
              ],
              "Effect": "Allow"
            },
            {
              "Action": [
                "MediaConvert:CreateJob"
              ],
              "Resource": [
                {
                  "Fn::Sub": "arn:${AWS::Partition}:mediaconvert:${AWS::Region}:${AWS::AccountId}:queues/*"
                },
                {
                  "Fn::Sub": "arn:${AWS::Partition}:mediaconvert:${AWS::Region}:${AWS::AccountId}:jobTemplates/${mediaConvertJobTemplateName}"
                }
              ],
              "Effect": "Allow"
            },
            {
              "Action": [
                "MediaConvert:GetJob"
              ],
              "Resource": [
                {
                  "Fn::Sub": "arn:${AWS::Partition}:mediaconvert:${AWS::Region}:${AWS::AccountId}:jobs/*"
                }
              ],
              "Effect": "Allow"
            },
            {
              "Action": [
                "iam:PassRole"
              ],
              "Resource": [
                {
                  "Fn::GetAtt": [
                    "MediaConvertExecutionRole",
                    "Arn"
                  ]
                }
              ],
              "Effect": "Allow"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ]
      },
      "DependsOn": "LambdaExecutionRole"
    },
