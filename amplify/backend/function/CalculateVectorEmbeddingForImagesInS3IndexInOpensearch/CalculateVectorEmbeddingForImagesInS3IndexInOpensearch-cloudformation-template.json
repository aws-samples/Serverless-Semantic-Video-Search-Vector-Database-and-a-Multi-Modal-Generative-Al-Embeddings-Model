      "Type": "String",
      "Default": "NONE",
      "Description": " Schedule Expression"
    },
    "deploymentBucketName": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "functionfrontendClipCrunchersSharedArn": {
      "Type": "String",
      "Default": "functionfrontendClipCrunchersSharedArn"
    },
    "vectordbopensearchCollectionEndpoint": {
      "Type": "String",
      "Description": "Input parameter describing CollectionEndpoint attribute for vectordb/opensearch resource"
    },
    "vectordbopensearchopensearchServerlessCollectionARN": {
      "Type": "String",
      "Description": "Input parameter describing ARN of opensearchServerlessCollection for vectordb/opensearch resource"
    },
    "vectordbopensearchopensearchServerlessCollectionName": {
      "Type": "String",
      "Description": "Input parameter describing opensearchServerlessCollectionName attribute for vectordb/opensearch resource"
    },
    "vectordbopensearchopensearchServerlessIndexName": {
      "Type": "String",
      "Description": "Input parameter describing opensearchServerlessIndexName attribute for vectordb/opensearch resource"
    },
    "bedrockEmbeddingModelId": {
      "Type": "String",
      "Default": "amazon.titan-embed-image-v1"
    },
    "bedrockInferenceModelId": {
      "Type": "String",
      "Default": "anthropic.claude-3-sonnet-20240229-v1:0"
    },
    "mediaConvertJobTemplateName": {
      "Type": "String",
      "Default": "ClipCrunchersVideoToFramesJobTemplate"
    },
    "cloudwatchNamespace": {
      "Type": "String",
      "Default": "clip-crunchers"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "Handler": "index.handler",
        "FunctionName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "CalculateVectorEmbeddInS3IndexInOpensearchb2ce577e0699",
            {
              "Fn::Join": [
                "",
                [
                  "CalculateVectorEmbeddInS3IndexInOpensearchb2ce577e0699",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            },
            "REGION": {
              "Ref": "AWS::Region"
            },
            "OpensearchEndpoint": {
              "Ref": "vectordbopensearchCollectionEndpoint"
            },
            "OpensearchIndexName": {
              "Ref": "vectordbopensearchopensearchServerlessIndexName"
            },
            "BedrockEmbeddingModelId": {
              "Ref": "bedrockEmbeddingModelId"
            },
            "BedrockInferenceModelId": {
              "Ref": "bedrockInferenceModelId"
            },
            "MediaConvertExecutionRoleArn": {
              "Fn::GetAtt": [
                "MediaConvertExecutionRole",
                "Arn"
              ]
            },
            "MediaConvertJobTemplateName": {
              "Ref": "mediaConvertJobTemplateName"
            },
            "CLOUDWATCH_NAMESPACE": {
              "Ref": "cloudwatchNamespace"
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "python3.11",
        "Layers": [
          {
            "Ref": "functionfrontendClipCrunchersSharedArn"
          },
          "arn:aws:lambda:us-east-1:336392948345:layer:AWSSDKPandas-Python311:4"
        ],
        "Timeout": 25
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "frontendLambdaRole4f8de6f0",
            {
              "Fn::Join": [
                "",
                [
                  "frontendLambdaRole4f8de6f0",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "lambdaexecutionpolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    },
                    "lambda": {
                      "Ref": "LambdaFunction"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "CustomLambdaExecutionPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "custom-lambda-execution-policy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "bedrock:InvokeModel"
              ],
              "Resource": [
                {
                  "Fn::Sub": "arn:${AWS::Partition}:bedrock:${AWS::Region}::foundation-model/${bedrockEmbeddingModelId}"
                },
                {
                  "Fn::Sub": "arn:${AWS::Partition}:bedrock:${AWS::Region}::foundation-model/${bedrockInferenceModelId}"
                }
              ],
              "Effect": "Allow"
            },
            {
              "Action": [
                "cloudwatch:PutMetricData"
